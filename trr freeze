local HttpService = game:GetService("HttpService")

-- Replace 'YOUR_WEBHOOK_URL' with your actual Discord webhook URL
local webhookUrl = "https://discord.com/api/webhooks/YOUR_WEBHOOK_URL"

-- Customize the message content, username, and icon URL
local messageContent = "Hello, this is a message from Roblox!"
local username = "YourUsername"
local iconUrl = "https://example.com/your-icon.png"

-- Create a table with the message payload
local payload = {
    content = messageContent,
    username = username,
    avatar_url = iconUrl
}

-- Convert the payload table to a JSON string
local payloadJson = HttpService:JSONEncode(payload)

-- Make a POST request to the Discord webhook URL
local success, response = pcall(function()
    return HttpService:PostAsync(webhookUrl, payloadJson, Enum.HttpContentType.ApplicationJson)
end)

-- Check if the request was successful
if success then
    print("Message sent successfully!")
else
    warn("Error sending message:", response)
end
