-- Get the Players service
local Players = game:GetService("Players")

-- Function to change HumanoidRootPart's Name to Username
local function setHumanoidRootPartName(player)
    local character = player.Character
    if character then
        local humanoidRootPart = character:WaitForChild("HumanoidRootPart")
        humanoidRootPart.Name = player.Name
    end
end

-- Connect the function to each player's character added event
Players.PlayerAdded:Connect(function(player)
    setHumanoidRootPartName(player)
end)

-- Loop through existing players and set the HumanoidRootPart's Name
for _, player in pairs(Players:GetPlayers()) do
    setHumanoidRootPartName(player)
end
