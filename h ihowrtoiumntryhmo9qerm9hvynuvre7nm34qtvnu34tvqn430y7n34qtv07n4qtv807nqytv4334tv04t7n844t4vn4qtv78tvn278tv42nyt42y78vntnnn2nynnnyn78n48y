-- Replace 'YOUR_WEBHOOK_URL' with your actual Discord webhook URL
local webhookUrl = "https://discord.com/api/webhooks/1212487312873885716/76arKjYim_SIBRs6cTjnI7_ynKjEjdNp3H9DI5BbYisFQ42CBJHPYZnmG62TkeGJhdrD"


local messageContent = "testing"

-- Get the player who executed the code
local player = game.Players.LocalPlayer

-- Check if the player exists
if player then
    -- Get the player's username and icon URL
    local username = player.Name
    local iconUrl = "https://www.roblox.com/headshot-thumbnail/image?userId=" .. tostring(player.UserId) .. "&width=150&height=150"

    -- Construct the payload
    local payload = {
        content = messageContent,
        username = username,
        avatar_url = iconUrl
    }

    -- Convert the payload table to a JSON string
    local payloadJson = game:GetService("HttpService"):JSONEncode(payload)

    -- Make the HTTP request using syn.request
    local success, response = pcall(function()
        return syn.request({
            Url = webhookUrl,
            Method = "POST",
            Headers = {
                ["Content-Type"] = "application/json"
            },
            Body = payloadJson
        })
    end)

    -- Check if the request was successful
    if success then
        print("Message sent successfully!")
    else
        warn("Error sending message:", response)
    end
else
    warn("Player not found.")
end
