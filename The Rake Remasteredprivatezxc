local OrionLib = loadstring(game:HttpGet(('https://raw.githubusercontent.com/shlexware/Orion/main/source')))()
local Window = OrionLib:MakeWindow({Name = "da reik", HidePremium = false, SaveConfig = false, IntroText = "da reik script", ConfigFolder = "da reik config"})

-- Values
_G.InfStamina = true
_G.AlwaysDay = true



































-- Functions
function hookInfiniteStamina()
    while _G.InfStamina == true do
        for _, v in pairs(getloadedmodules()) do
            if v.Name == "M_H" then
                local module = require(v)
                local old; old = hookfunction(module.TakeStamina, function(smth, amount)
                    if amount > 0 then return old(smth, -0.5) end
                    return old(smth, amount)
                end)
            end
            wait(0.5)
        end
    end
end














-- Tabs
local Main = Window:MakeTab({
    Name = "Main",
    Icon = "rbxassetid://4483345998",
    PremiumOnly = false
})

Main:AddButton({
    Name = "Infinite Stamina",
    Default = false,
    Callback = function()
          while _G.InfStamina == true do
              for _, v in pairs(getloadedmodules()) do
                  if v.Name == "M_H" then
                      local module = require(v)
                      local old; old = hookfunction(module.TakeStamina, function(smth, amount)
                          if amount > 0 then return old(smth, -0.5) end
                          return old(smth, amount)
                      end)
                  end
                  wait(0.02)
              end
          end
      end
})

OrionLib:Init()
